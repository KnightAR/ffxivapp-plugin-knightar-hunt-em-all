                                <TextBlock Padding="5"
                                Text="{Binding Locale[event_ArgumentsLabel],
                                Source={StaticResource PluginViewModel}}" DockPanel.Dock="Left" />
                            -->
                        <!--</DockPanel>
                    </DockPanel>
                </Expander>
            </StackPanel>
        </GroupBox>-->
    </Grid>
</UserControl>


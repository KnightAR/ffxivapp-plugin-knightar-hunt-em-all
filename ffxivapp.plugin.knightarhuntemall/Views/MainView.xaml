                  Grid.Row="0"
                  Margin="3"
                  Header="{Binding Locale[event_EventOptionsHeader],
                                   Source={StaticResource PluginViewModel}}">
            <StackPanel>
                <Expander Header="{Binding Locale[event_ExecutableOptionsHeader],
                                           Source={StaticResource PluginViewModel}}">
                    <DockPanel Margin="3">
                        <DockPanel Margin="3"
                                   Dock="Top"
                                   LastChildFill="True">
                        </DockPanel>
                        <DockPanel Dock="Bottom">-->
                            <!--
